<body>
  <h1>Sana çokçokçokçok aşığım</h1>
  <div id="counter"></div>
  <button onclick="showSurprise()">Tıkla ve sürprizi gör</button>
  <div id="surprise">Bu hediyeler senin için, seni çok seviyorum, hiç ayrılmayalım, sonsuza kadar benim prensesim olarak kal ❤️</div>

  <script>
    // Sayaç hesaplama
    const startDate = new Date();
    startDate.setDate(startDate.getDate() - 47); // 47 gün öncesi
    const counter = document.getElementById('counter');

    function updateCounter() {
      const now = new Date();
      const diff = now - startDate;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      counter.textContent = `${days} gündür birlikteyiz ❤️`;
    }
    updateCounter();

    // Sürpriz mesaj
    function showSurprise() {
      document.getElementById('surprise').style.display = 'block';
      createHearts();
    }

    // Kalpler oluşturma
    function createHearts() {
      for (let i = 0; i < 20; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.backgroundColor = '#ff0000';
        heart.style.animationDuration = (3 + Math.random() * 2) + 's';
        document.body.appendChild(heart);

        setTimeout(() => {
          heart.remove();
        }, 5000);
      }
    }
  </script>
</body>
</html>
